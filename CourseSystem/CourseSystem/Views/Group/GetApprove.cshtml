@model int 

<!DOCTYPE html>
<html lang="en">
<head>  
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.2/semantic.min.css">
    <style>
    body {
      background-color: #f0f0f0; 
    }
    .card-container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin-top: 100px;
    }
    .custom-card {
      background-color: #ffffff; 
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .custom-header {
      color: #4682B4; 
    }
  </style>
    <title>Email Change Success</title>
</head>
<body>
<div class="ui container card-container">
    @if (TempData["Error"] != null)
    {
        <div class="ui negative message">
            <p><b>Sorry!</b> - @TempData["Error"]</p>
        </div>
    }    
    <div class="custom-card">
        <div class="content">
            <h5 class="header custom-header">Approve</h5>
            <p>Do you want to receive confirmation from the admin to create a group of more than 20 people? If yes, we send them email</p>
            
            <input type="radio" class="btn-check" name="options-outlined" id="danger-outlined" autocomplete="off">
            <a asp-controller="Group" asp-action="GetApprove" asp-route-id="@Model" class="ui details-button button" for="danger-outlined">
                Yes
            </a>
            <input type="radio" class="btn-check" name="options-outlined" id="success-outlined" autocomplete="off" checked>
            <a asp-controller="Home" asp-action="Index" class="ui delete-button button" for="success-outlined">
                No
            </a>            
        </div>
    </div>
</div>
</body>
</html>
