@using UI.ViewModels.AssignmentViewModels
@model AssignmentAnsweViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Assignment</title>
    <!-- Add Bootstrap CSS link here -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
    <style>
        body {
           background-color: #f7f7f7;
        }
    </style>
</head>
<body>
    @if (TempData["Error"] != null)
    {
        <div class="ui negative message">
            <p><b>Sorry!</b> - @TempData["Error"]</p>
        </div>
    }
    <div class="ui container" style="margin-top: 20px;">
        <div class="ui centered card" style="width: 400px;">
            <div class="content">
                <div class="header">
                    Create assignment answer
                </div>
            </div>  
            <div class="content">
                <form method="post" asp-controller="AssignmentAnswer" asp-action="Create" enctype="multipart/form-data" class="ui form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="AssignmentId" value="@Model.AssignmentId">
                    <!-- Assignment Details Inputs -->
                    <div class="form-row form-group">
                        <div class="field">
                            <label asp-for="AnswerDescription" class="control-label"></label>
                            <textarea asp-for="AnswerDescription" class="form-control custom-textarea" rows="5" id="AnswerDescription" placeholder="Enter your answer description"></textarea>
                            <span asp-validation-for="AnswerDescription" class="text-danger"></span>
                        </div>     
                    </div>
                    <h4>Your assignmnet answer:</h4>
                    <div class="field">
                        <label for="AssignmentAnswerFiles">Select File(s):</label>
                        <input asp-for="AssignmentAnswerFiles" type="file" class="form-control-file" id="AssignmentAnswerFiles" name="AssignmentAnswerFiles" multiple>
                    </div>
                    <!-- Submit Button -->
                    <div class="field">
                        <div class="col" style="display: inline-block;">
                            <input class="ui create-button button" type="submit" value="Create" />
                        </div>
                        <div class="col" style="display: inline-block;">
                            <a href="@Url.Action("Details", "Assignment", new { assignmentId = Model.AssignmentId})" class="ui button">Cancel</a>
                        </div>
                    </div>
                </form>                
            </div>
        </div>
    </div>
</body>
</html>
