@model Notification

<!DOCTYPE html>
<html>
<head>
    <title>User Notification</title>
</head>
<body>
<div class="container" style="margin-top: 140px">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card-notification-custom">
                <div class="card-header-notification-custom" style="border-radius: 20px;">
                    <h2>@Model.Name</h2>
                </div>
                @if (TempData["Error"] != null)
                {
                    <div class="error-message-notification-custom">
                        <span><b>Sorry!</b> - @TempData["Error"]</span>
                    </div>
                }
                <div class="card-body-notification-custom">
                    <p class="notification-text-notification-custom">
                        @Html.Raw(Model.Description)
                    </p>
                    <p class="notification-date-notification-custom">
                        Date: @Model.Created.ToString("f")
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
