@using UI.ViewModels
@model NewPasswordViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Reset Password</title>
</head>

<body class="body">
<div class="main-container-reset-password">
    <div class="ui centered card" style="width: 40%;">
        <div class="content">
            <div class="header mt-3">
                <h3 class="ui center aligned header">
                    Update your password
                </h3>
            </div>
        </div>
        <div class="content" style="text-align: center;">
            <form method="post" asp-controller="Account" asp-action="ResetPassword">
                <input type="hidden" asp-for="Email" value="@Model.Email"/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label"></label>
                    <input asp-for="NewPassword" class="form-control" style="text-align: center;">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="mt-3"></div>
                <div class="form-group">
                    <label asp-for="ConfirmNewPassword" class="control-label"></label>
                    <input asp-for="ConfirmNewPassword" class="form-control" style="text-align: center;">
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>
                <div class="ui buttons mt-3">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <button class="ui edit-button button" type="submit">Update password</button>
                        <div class="or"></div>
                        <a class="ui button btn-outline-dark" asp-controller="Account" asp-action="Login">Cancel</a>
                    }
                    else
                    {
                        <button class="ui edit-button button" type="submit">Update password</button>
                        <div class="or"></div>
                        <a class="ui button btn-outline-dark" asp-controller="User" asp-action="Index">Cancel</a>
                    }
                </div>
            </form>
            @if (TempData["Error"] != null)
            {
                <div class="ui container mt-3">
                    <div class="ui negative message">
                        <p><b>Sorry!</b> - @TempData["Error"]</p>
                    </div>
                </div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="ui container mt-3">
                    <div class="ui positive message">
                        <p class="text-success">@TempData["SuccessMessage"]</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
</body>
</html>